<!DOCTYPE html>
<html lang="en" class="leaderboard">
    <%- include("partials/head") %>

    <body>
        <main>
            <section class="search">
                <div class="search-box">
                    <input
                        type="text"
                        placeholder="Search"
                        class="search-input"
                    />
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>

                <div class="search-by">
                    <p>Search by</p>
                    <select class="search-by-select">
                        <option value="student">student</option>
                        <option value="teacher">teacher</option>
                        <option value="class">class</option>
                    </select>
                </div>
            </section>

            <table class="board">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Student</th>
                        <th>Points</th>
                        <th>Class</th>
                        <th>Teacher</th>
                    </tr>
                </thead>

                <tbody>
                    <% students.forEach((student, index) => { %>
                    <!---->
                    <% if (student.points !== 0) { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td title="<%= student.name %>"><%= student.name %></td>
                        <td><%= student.points %></td>
                        <td title="<%= student.className %>">
                            <%= student.className %>
                        </td>
                        <td title="<%= student.classTeacher %>">
                            <%= student.classTeacher %>
                        </td>
                    </tr>
                    <% }}); %>
                </tbody>
            </table>
        </main>

        <!-- Script Files -->
        <script src="./scripts/leaderboard.js" defer></script>
    </body>
</html>
